<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.DetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textCharacterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/snow"
        android:gravity="center"
        android:layout_margin="1dp"
        android:padding="8dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="textCharacterName" />

    <ImageView
        android:id="@+id/imageViewCharacter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:src="@tools:sample/backgrounds/scenic"
        android:layout_margin="1dp"
        android:padding="1dp"
        app:layout_constraintTop_toBottomOf="@id/textCharacterName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textCharacterDescription"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textCharacterDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/snow"
        tools:text="characterDescription"
        android:textSize="16sp"
        android:layout_margin="1dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewCharacter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textCharacterComics"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textCharacterComics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/snow"
        tools:text="textCharacterComics"
        android:textSize="16sp"
        android:layout_margin="1dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/textCharacterDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textCharacterStories"/>

    <TextView
        android:id="@+id/textCharacterStories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/snow"
        tools:text="textCharacterStories"
        android:textSize="16sp"
        android:layout_margin="1dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/textCharacterComics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textCharacterEvents"/>

    <TextView
        android:id="@+id/textCharacterEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/snow"
        tools:text="textCharacterEvents"
        android:textSize="16sp"
        android:layout_margin="1dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/textCharacterStories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textCharacterSeries"/>

    <TextView
        android:id="@+id/textCharacterSeries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/snow"
        tools:text="textCharacterSeries"
        android:textSize="16sp"
        android:layout_margin="1dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>